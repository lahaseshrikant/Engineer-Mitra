{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [
      {
        "source": "/home",
        "destination": "/index.html"
      },
      {
        "source": "/material",
        "destination": "/material.html"
      },
      {
        "source": "/contribute",
        "destination": "/contribute.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/signup",
        "destination": "/signup.html"
      },
      {
        "source": "/profile",
        "destination": "/profile.html"
      },
      {
        "source": "/material/civil",
        "destination": "/material/civil.html"
      }
    ],

    "redirects": [
      {
        "source": "*index.html",
        "destination": "/home",
        "type": 301
      },
      {
        "source": "*material.html",
        "destination": "/material",
        "type": 301
      },
      {
        "source": "*contribute.html",
        "destination": "/contribute",
        "type": 301
      },
      {
        "source": "*about.html",
        "destination": "/about",
        "type": 301
      },
      {
        "source": "*login.html",
        "destination": "/login",
        "type": 301
      },
      {
        "source": "*signup.html",
        "destination": "/signUp",
        "type": 301
      },
      {
        "source": "*profile.html",
        "destination": "/profile",
        "type": 301
      },
      {
        "source": "*material/civil.html",
        "destination": "/material/civil",
        "type": 301
      }
    ],
    "trailingSlash": false
  }
}